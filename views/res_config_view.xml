<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_purchase_subscription_config_settings" model="ir.ui.view">
            <field name="name">purchase subscription settings</field>
            <field name="model">purchase.subscription.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Purchase Subscription" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <field name="has_default_company" invisible="1" />
                    <group string="Company" groups="base.group_multi_company">
                        <label for="id" string="Company"/>
                        <div>
                            <div attrs="{'invisible': [('has_default_company', '=', True)]}">
                                <field name="company_id"
                                    options="{'no_create': True}"
                                    class="oe_inline"/>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="action_purchase_subscription_config" model="ir.actions.act_window">
            <field name="name">Configure Purchase Subscription</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.subscription.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
        
        <menuitem id="menu_purchase_subscription_configuration" name="Configuration" parent="menu_purchase_subscription_root" sequence="15" groups="purchase.group_purchase_manager"/>
        <menuitem id="menu_purchase_subscription_config" name="Settings" parent="menu_purchase_subscription_configuration"
            sequence="0" action="action_purchase_subscription_config" groups="purchase.group_purchase_manager"/>
    </data>
</openerp>
