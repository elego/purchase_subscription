<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <record model="ir.ui.view" id="account_analytic_account_view_inherit_purchase_subcription">
        <field name="name">account.analytic.account.view.buttons.po.susbcription_count</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form" />
        <field name="priority" eval="23"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="po_subscriptions_action"
                    icon="fa-book" attrs="{'invisible': [('po_subscription_count', '=', 0)]}">
                    <field string="Subscriptions" name="po_subscription_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</openerp>
